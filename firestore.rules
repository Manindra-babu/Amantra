rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Profiles: Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Contracts (Bonds):
    // - Create: Authenticated users can create if they set themselves as creator
    // - Read: Users can read if they are the creator or the counterparty (by email matching their auth email)
    // - Update: Creators can update
    match /contracts/{contractId} {
      allow create: if request.auth != null && request.resource.data.creatorUid == request.auth.uid;
      allow read: if request.auth != null && (
        resource.data.creatorUid == request.auth.uid || 
        resource.data.counterpartyEmail == request.auth.token.email
      );
      allow update: if request.auth != null && resource.data.creatorUid == request.auth.uid;
    }
    
    // Change Requests:
    match /requests/{requestId} {
      allow read, write: if request.auth != null;
    }

    // Audit Logs: Read-only for admins (or generic auth for now), Write by system/authenticated
    match /auditLogs/{logId} {
      allow read, write: if request.auth != null;
    }
  }
}
